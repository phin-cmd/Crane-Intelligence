{
  "name": "crane-intelligence-tests",
  "version": "1.0.0",
  "description": "End-to-end test automation for Crane Intelligence Platform",
  "scripts": {
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:dev": "playwright test --project=dev",
    "test:uat": "playwright test --project=uat",
    "test:prod": "playwright test --project=production",
    "test:smoke": "playwright test --grep @smoke",
    "test:critical": "playwright test --grep @critical",
    "test:report": "playwright show-report",
    "test:codegen": "playwright codegen https://dev.craneintelligence.tech"
  },
  "keywords": [
    "playwright",
    "e2e",
    "testing",
    "automation"
  ],
  "author": "Crane Intelligence Team",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "pg": "^8.11.3"
  }
}

